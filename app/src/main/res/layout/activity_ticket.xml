<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBlack"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.view.activity.ScheduleActivity.TicketActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticket_JC"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:id="@+id/ticket_back"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ticket_name"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="复仇者之战"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="时长"
                android:textColor="#fff"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:id="@+id/ticket_time"
                android:text="182分钟"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="#fff"
                android:textSize="15sp"
                android:text="评分"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="#fff"
                android:id="@+id/ticket_price"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:text="182分钟"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="#fff"
                android:textSize="15sp"
                android:text="导演"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="#fff"
                android:id="@+id/ticket_daoyan"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:text="182分钟"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ticket_rll"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_height="44dp">
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ticket_Spinner01"
            android:layout_marginLeft="24dp"
            android:layout_height="44dp">
        </androidx.appcompat.widget.AppCompatSpinner>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/ticket_Spinner02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp">
        </androidx.appcompat.widget.AppCompatSpinner>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="价格最低"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/ss"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ticket_rll"
        android:layout_marginLeft="24dp"
        android:id="@+id/ticket_recy"/>
</LinearLayout>