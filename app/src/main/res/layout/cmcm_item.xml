<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:id="@+id/rl"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@color/colorBlack"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@color/colorLightBlack"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/cmcm_iv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorWhite"
            android:text="万达国际影城（龙德广场店）"
            android:id="@+id/cmcm_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_32"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorWhite"
            android:text="昌平区立汤路186号龙德广场5层"
            android:id="@+id/cmcm_address"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_63"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorWhite"
            android:text="6.7km"
            android:id="@+id/cmcm_km"/>

        <ImageView
            android:layout_width="@dimen/dp_292"
            android:layout_height="@dimen/dp_2"
            android:background="@color/colorWhite"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_92"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_102"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/colorWhite"
            android:text="我的评价"/>
        <TextView
            android:layout_width="@dimen/dp_292"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_132"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorWhite"
            android:text="拍的不错，看过原著，完美的体现，把现实诉说淋漓尽致，这是一个比悲伤更悲伤的故事。"
            android:id="@+id/cmcm_comment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:text="2020-05-18 00:00"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/cmcm_comment"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:id="@+id/cmcm_time"/>
    </RelativeLayout>
</RelativeLayout>