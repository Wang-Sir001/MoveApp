<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#191931"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.view.activity.DetailActivity.CinemaActivity">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/film_back"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写评价"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="25sp"

        android:layout_marginTop="37dp"
        android:layout_marginLeft="156dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textSize="25sp"
        android:id="@+id/film_name"
        android:background="#1c2243"
        android:textColor="#fff"
        android:text="悲伤逆流成河"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_marginTop="80dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#fff"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="185dp"
        android:text="写下你对此影片的看法吧!"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="220dp"
        android:layout_height="159dp">
        <EditText
            android:id="@+id/film_et"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1c2243"
            android:gravity="start"/>
        <TextView
            android:id="@+id/film_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="0/150"
            android:textColor="#fff" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"

        android:layout_height="60dp"
        android:textSize="14sp"
        android:text="提交"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:background="@drawable/logbut"
        android:id="@+id/film_submit" />
</RelativeLayout>