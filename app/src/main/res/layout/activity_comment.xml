<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#191931"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.view.activity.DetailActivity.CommentActivity">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/film_back"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写评价"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="25sp"

        android:layout_marginTop="37dp"
        android:layout_marginLeft="156dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textSize="25sp"
        android:id="@+id/film_name"
        android:background="#1c2243"
        android:textColor="#fff"
        android:text="悲伤逆流成河"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_marginTop="80dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/film_ping"
        android:layout_marginTop="138dp"
        android:text="我的评分(0.0分)"
        android:layout_marginLeft="24dp" />
    <RatingBar
        android:id="@+id/film_ratingbar"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_height="42dp"
        android:progressBackgroundTint="#fff"
        android:progressTint="#fff"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginTop="200dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="250dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="极差"
            android:textColor="#fff"
            android:layout_marginLeft="6dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="26sp"
            android:text="较差"
            android:textColor="#fff"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="一般"
            android:textColor="#fff"
            android:layout_marginLeft="26dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="不错"
            android:textColor="#fff"
            android:layout_marginLeft="26dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="极好"
            android:textColor="#fff"
            android:layout_marginLeft="26dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#fff"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="295dp"
        android:text="写下你对此影片的看法吧!"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="323dp"
        android:layout_height="159dp">
        <EditText
            android:id="@+id/film_et"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1c2243"
            android:gravity="start"/>
        <TextView
            android:id="@+id/film_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="0/150"
            android:textColor="#fff" />

    </RelativeLayout>

    <Button
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:textSize="14sp"
        android:text="提交"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:background="@drawable/logbut"
        android:id="@+id/film_submit" />
</RelativeLayout>