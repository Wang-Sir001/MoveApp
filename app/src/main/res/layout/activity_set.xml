<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBlack"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:id="@+id/comeback"
        android:background="@drawable/back"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_40"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_37"
        android:text="设置"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorLightBlack"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="24dp"
        android:layout_height="@dimen/dp_88">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:id="@+id/set_clear"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10M"
                android:id="@+id/set_data"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:id="@+id/set_update"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/colorWhite"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@drawable/youzhankai"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorLightBlack"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="24dp"
        android:layout_marginTop="@dimen/dp_178"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:text="重置密码"
            android:textSize="@dimen/sp_20"
            />
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_15"
            android:id="@+id/reset"
            android:layout_centerVertical="true"
            android:src="@drawable/youzhankai"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_242"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="24dp"
        android:id="@+id/set_cancle_login"
        android:textSize="@dimen/sp_14"
        android:text="退出登录"
        android:textColor="@color/colorWhite"
        android:background="@color/colorLightBlack"
        />
</RelativeLayout>